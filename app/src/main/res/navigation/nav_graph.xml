<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.contactos.FirstFragment"
        android:label="Lista de contactos"
        tools:layout="@layout/fragment_first">


        <action
            android:id="@+id/action_FirstFragment_to_agregarFragment"
            app:destination="@id/agregarFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.contactos.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
        <argument
            android:name="nombre"
            app:argType="string" />
        <argument
            android:name="telefono"
            app:argType="string" />
        <action
            android:id="@+id/action_SecondFragment_to_agregarFragment"
            app:destination="@id/agregarFragment" />
    </fragment>
    <fragment
        android:id="@+id/agregarFragment"
        android:name="com.example.contactos.AgregarFragment"
        android:label="Agregar Contacto" >
        <action
            android:id="@+id/action_agregarFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
</navigation>